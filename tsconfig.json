{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    // Soporta imports tipo "@/shared/api"
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    // Tipos de Vite
    "types": ["vite/client"]
  },
  "include": ["src"]
}
